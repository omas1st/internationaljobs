<!DOCTYPE html>
<html>
<head>
  <title>User Management - Admin</title>
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <div class="container">
    <nav class="admin-nav">
      <ul>
        <li><a href="/admin">Dashboard</a></li>
        <li><a href="/admin/jobs">Job Management</a></li>
        <li><a href="/admin/users">User Management</a></li>
        <li><a href="/admin/settings">Settings</a></li>
        <li><a href="/admin/analytics">Analytics</a></li>
        <li><a href="/auth/logout">Logout</a></li>
      </ul>
    </nav>
    <h1>User Management</h1>
    <a href="/admin/users/add">Add New User</a>
    <ul class="user-list">
      <% users.forEach(user => { %>
      <li>
        <strong><%= user.username %></strong> - Role: <%= user.role %>
        <a href="/admin/users/edit/<%= user._id %>">Edit</a>
        <a href="/admin/users/delete/<%= user._id %>">Delete</a>
      </li>
      <% }); %>
    </ul>
  </div>
</body>
</html>
