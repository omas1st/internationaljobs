<!DOCTYPE html>
<html>
<head>
  <title>Job Listings</title>
  <link rel="stylesheet" href="/css/jobs.css">
</head>
<body>
  <div class="container">
    <nav>
      <a href="/">Home</a> |
      <a href="/auth/login">Login</a> |
      <a href="/auth/register">Register</a>
    </nav>
    <h1>Available Jobs</h1>
    <ul class="job-list">
      <% jobs.forEach(job => { %>
        <li class="job-item">
          <div class="company-logo">
              <img src="<%= job.companyImage ? job.companyImage : '/images/default_company.png' %>" alt="<%= job.companyName %>">
          </div>
          <div class="job-info">
              <h2><%= job.companyName %></h2>
              
              <div class="job-highlights">
                  <div class="highlight-item">
                      <strong>Position</strong>
                      <%= job.position %>
                  </div>
                  <div class="highlight-item">
                      <strong>Type</strong>
                      <%= job.jobType %>
                  </div>
                  <div class="highlight-item">
                      <strong>Salary</strong>
                      $<%= job.salary %>
                  </div>
                  <div class="highlight-item">
                      <strong>Location</strong>
                      <%= job.location %>
                  </div>
              </div>
      
              <a class="apply-btn" href="/jobs/apply/<%= job._id %>">Apply Now</a>
          </div>
      </li>
      <% }); %>
    </ul>
  </div>
</body>
</html>
